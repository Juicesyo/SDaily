  color: var(--weui-FG-1);
  width: 30px;
}
.menu{
  height: 25px;
  width: 25px;
  margin: 5px;
}

.c-state{ 
  transform:translate(195px,0%);  
 }

 .slidebar {
  height: 100%;
  width: 200px;
  position: fixed;
  background-color: white;
  z-index: 1;
}
.slidebar-list {
  padding-top: 60rpx;
}
.slidebar-content {
  color: black;
  padding: 10px 0px 10px 10px;
  border-bottom: 1px solid rgb(238, 238, 238);
}
.text{
  padding-right: 150px;
}
