.placeholder-week {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: var(--weui-BG-0);
  height: 2.3em;
  line-height: 2.3em;
  color: var(--weui-FG-1);
  width: 30px;
}
.line {
  width: 120%;
  height: 3px;
  background-color: #D8D8D8;
}
.placeholder-time{
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: var(--weui-BG-0);
  height: 10.7em;
  line-height: 2.5em;
  color: var(--weui-FG-1);
  width: 15px;
}
.placeholder-course {
  margin: 5px;
  padding: 0 10px;
  text-align: center;
  background-color: var(--weui-BG-0);
  height: 5.2em;
